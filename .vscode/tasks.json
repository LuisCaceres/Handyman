// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "start",
			"dependsOn": [
				"static-server",
				"typescript",
				"unit-tests"
			],
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "unit-tests",
			"command": "tsc -watch --rootDir src --outDir tests/out --module esnext",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"type": "shell",
		},
		{
			"label": "static-server",
			"command": "start chrome \"http://127.0.0.1:8000/\" && node tests/static-server",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"type": "shell",
		},
		{
			"label": "typescript",
			"command": "tsc --watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"problemMatcher": "$tsc-watch",
			"type": "shell",
		},
	]
}