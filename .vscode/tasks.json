// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "start",
			"dependsOn": [
				"typescript",
				"unit-tests"
			],
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "unit-tests",
			"command": "mocha --colors --enable-source-maps out/test/**/*.js ",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"type": "shell",
		},
		{
			"label": "typescript",
			"command": "tsc --watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"problemMatcher": "$tsc-watch",
			"type": "shell",
		},
	]
}