// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "start",
			"dependsOn": [
				"static-server",
				"unit-tests",
				"watch",
			],
		},
		{
			"label": "watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
            "label": "static-server",
            "type": "npm",
            "script": "static-server",
        },
        {
            "label": "unit-tests",
            "type": "npm",
            "script": "unit-tests",
        },
	]
}
